- content_for(:page_id) { 'update-password-page' }

%h1 Update Password

= form_tag v1_password_url, 'data-ajax' => false, :id => 'update-password-form' do
  %p Ouch, you just signed in with a nasty auto-generated password... let's make it more memorable!
  %div.errors

  %label{ :for => 'update-password' } new password
  %input#update-password{ :type => 'password' }

  %label{ :for => 'update-password-confirmation' } new password confirmation
  %input#update-password-confirmation{ :type => 'password' }

  %button{ :type => 'submit' } Let's do this!

