<table id="assignments_table" border="0" cellspacing="0" cellpadding="0">  <tr>    <th><%= ajax_sortable "work_order_id","Work Order" %></th>    <th><%= ajax_sortable "user_id", "User" %></th>    <th><%= ajax_sortable "part_id","Part Number"  %></th>    <th>Part Description</th>    <th><%= ajax_sortable "qty_in","Quantity In" %></th>    <th><%= ajax_sortable "qty_out","Quantity Out"  %></th>    <th><%= ajax_sortable "created_at","Created At"  %></th>    <th><%= ajax_sortable "audit_resolved","Audit Resolved At"  %></th>  </tr>  <% if @assignments.empty? %>    <td colspan='8'>No assignments for the given criteria.</td>  <% else %>     <%= render :partial => 'assignment', :collection => @assignments %>  <% end %> </table>